#!/usr/bin/env node

require('./matrix-init');
// load app
require('../lib/app.js');

// exit on SIGHUP
process.on('SIGHUP', function () {
  process.exit(0);
});

// exit on SIGTERM
process.on('SIGTERM', function () {
  process.exit(0);
});

process.on('uncaughtException', function(e){
  console.error('Matrix CLI Error:'.red, e.stack );
  process.exit(0)
})
