#!/usr/bin/env node

// Everything above this line will be executed twice
Matrix 						= {};
Matrix.version 		= require('../package.json').version;
Matrix.config     = require('../config/index');
Matrix.api        = require('admatrix-node-sdk');
_                 = require('lodash');

// load app
require('../lib/app.js');

// exit on SIGHUP
process.on('SIGHUP', function () {
  process.exit(0);
});

// exit on SIGTERM
process.on('SIGTERM', function () {
  process.exit(0);
});
